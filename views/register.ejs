<% include ./partials/header %>

<!-- Register -->
<section id="home" class="signup-background">
      <div id="home-cover" class="bg-parallax animated fadeIn">
         <div id="home-content-box">
            <div id="home-content-box-inner">
               <div class="container ">
                  <div class="row">
                     <div class="col-md-12 text-center">
                        <img src="https://cdn-images-1.medium.com/max/1000/1*JAY16IKJV36xzy0TkmuNIA.png" class="signup-big-logo">
                     </div>
                  </div>
               </div>
                <form action="/register" method="POST">
                    <div class="login">
                        <div class="form-group">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-4 col-md-offset-4 text-left signup-username-wrapper">
                                        <label for="signup-username" class="sign-up-label">Username</label>
                                        <input class="form-control signup-input" type="text" name="username" aria-describedby="passwordHelpBlock">
                                    </div>
                                </div>
                            </div>
                            <div class="container container-table">
                                <div class="row vertical-center-row">
                                    <div class="col-md-4 col-md-offset-4 text-left">
                                        <label for="signup-password" class="sign-up-label">Password</label>
                                        <input class="form-control signup-input" id="signup-password" type="password" name="password" aria-describedby="passwordHelpBlock">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="container container-table">
                                <div class="row vertical-center-row">
                                    <div class="col-md-4 col-md-offset-4 text-left">
                                        <button class="btn-block btn btn-general-block hvr-sweep-to-right">Sign Up</button>
                                    </div>
                                </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<% include ./partials/footer %>