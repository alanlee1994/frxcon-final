<% include ../partials/header %>

<!-- Edit Comment -->
<section class="comment">s
    <div class="container">
        <div class="row comment-wrapper">
            <h1 class="comment-header text-center">Make Edit to Comment</h1>
            <div id="comment-parent">
                 <form action="/trades/<%=trade_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                    <div class="form-group col-md-7 col-centered">
                        <input class="form-control comment-text-area" type="text" name="comment[text]" value="<%=comment.text%>">
                    </div>
                    <div class="form-group col-md-7 col-centered comment-edit-left" id="comment-center">
                        <input class="btn btn-general-dashboard comment-button"type="submit">
                        <a class="btn btn-general-dashboard comment-button" href="/trades">Back to view</a>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</section>

<% include ../partials/footer %>   